---
import { Button } from "@/components/ui/button";
import { subhead } from "@/constants";
import "@fontsource-variable/geist-mono";
---

<section class="mt-16 p-4 max-w-6xl mx-auto flex flex-col gap-6 md:mt-32">
  <header class="text-center">
    <span
      class="mx-auto font-medium select-none text-sm flex items-center gap-1 justify-center max-w-fit bg-neutral-800/5 px-4 rounded-2xl py-1"
    >
      <span class="w-2 h-2 rounded-full pulse bg-green-500 inline-block"></span>
      Available for new events
    </span>

    <h1
      class="text-2xl font-semibold max-w-3xl mx-auto mt-4 md:text-4xl lg:text-5xl"
    >
      I'll plan the party, so you get to <em>enjoy</em> it, not manage it.
    </h1>
    <p class="mt-2 max-w-xs mx-auto sm:max-w-md md:text-xl lg:max-w-lg md:mt-4">
      {subhead}
    </p>

    <div class="flex flex-col items-center mt-4">
      <Button>Let's plan your party</Button>
    </div>
  </header>
</section>

<style>
  .pulse {
    position: relative;
  }

  .pulse::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 9999px;
    background-color: rgba(34, 197, 94, 0.4);
    animation: pulse-ring 2s ease-out infinite;
    transform-origin: center;
  }

  @keyframes pulse-ring {
    0% {
      transform: scale(1);
      opacity: 0.8;
    }
    70% {
      transform: scale(2.5);
      opacity: 0;
    }
    100% {
      transform: scale(1);
      opacity: 0;
    }
  }
</style>
